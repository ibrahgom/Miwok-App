<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:numColumns="2"
    tools:background="#F32A12">

    <ImageView
        android:id="@+id/imageview_blue_2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/rect_item"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        />

    <ImageView

        android:id="@+id/imageview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageview_blue_2"
        app:layout_constraintStart_toStartOf="@+id/imageview_blue_2"
        app:layout_constraintTop_toTopOf="@+id/imageview_blue_2"
        tools:src="@mipmap/ic_launcher_icon_main_page" />

    <TextView

        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@+id/imageview1"
        app:layout_constraintTop_toTopOf="@id/imageview_blue_2"
        tools:text="Shubham" />

    <TextView

        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/textview1"
        app:layout_constraintStart_toEndOf="@+id/imageview1"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        tools:text="Verma" />

    <ImageView

        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageview_blue_2"
        app:layout_constraintEnd_toEndOf="@+id/imageview_blue_2"
        app:layout_constraintTop_toTopOf="@+id/imageview_blue_2"
        android:src="@drawable/ic_play_circle_outline_black_50dp" />

</androidx.constraintlayout.widget.ConstraintLayout>